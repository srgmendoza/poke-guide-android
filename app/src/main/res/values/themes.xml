<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PokeGuide" parent="android:Theme.Material.Light.NoActionBar" />
        <style name="Theme.App.Starting" parent="Theme.SplashScreen">
            <!-- Set the splash screen background, animated icon, and animation duration. -->
            <item name="windowSplashScreenBackground">@color/design_default_color_background</item>

            <!-- Use windowSplashScreenAnimatedIcon to add either an animated drawable or a static drawable. -->
            <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

            <!-- Set the theme of the Activity that directly follows your splash screen. -->
            <item name="postSplashScreenTheme">@style/Theme.MyApp</item>

            <!-- Optional: Use windowSplashScreenAnimationDuration to set the duration of the animation. -->
            <item name="windowSplashScreenAnimationDuration">300</item>
        </style>

        <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your main app theme here -->
        </style>
</resources>